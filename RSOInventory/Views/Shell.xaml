<mah:MetroWindow  xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                  x:Class="RSOInventory.Shell"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:prism="http://prismlibrary.com/"
                    xmlns:local="clr-namespace:RSOInventory"
                  WindowState="Maximized" WindowStartupLocation="CenterScreen"
                    mc:Ignorable="d" Title="Inventory Management System" Height="450" Width="800">

    <Grid>
        <DockPanel LastChildFill="True">
            <ContentControl DockPanel.Dock="Right" prism:RegionManager.RegionName="RightRegion"/>
            <ContentControl prism:RegionManager.RegionName="MainRegion"
                            DockPanel.Dock="Left"/>
        </DockPanel>
    </Grid>
</mah:MetroWindow>
