<mah:MetroWindow  xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                  x:Class="RSOInventory.Shell"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:prism="http://prismlibrary.com/"
                    xmlns:local="clr-namespace:RSOInventory"
                  WindowState="Maximized" WindowStartupLocation="CenterScreen"
                    mc:Ignorable="d" Title="Inventory Management System" Height="450" Width="800">
    <mah:MetroWindow.Resources>
        <Style TargetType="mah:MetroTabItem">
            <Setter Property="Header" Value="{Binding DataContext.Title}"/>
        </Style>
    </mah:MetroWindow.Resources>

    <Grid Margin="32">
        <mah:MetroAnimatedSingleRowTabControl prism:RegionManager.RegionName="MainRegion" />
    </Grid>
</mah:MetroWindow>
